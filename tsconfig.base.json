{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "lib": ["es2022"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noEmit": true,
    "isolatedModules": false,
    "baseUrl": ".",
    "paths": {
      "@noverna/database": ["packages/noverna-database/src"],
      "@noverna/cache": ["packages/noverna-cache/src"],
      "@noverna/common": ["packages/noverna-common/src"],
      "@noverna/config": ["packages/noverna-config/src"],
      "@shared/*": ["packages/shared/*"]
    },
    "types": ["@citizenfx/server", "bun-types", "node"]
  },
  "include": [],
  "exclude": ["node_modules", "dist", "**/dist/**", "bun.lockb"]
}
